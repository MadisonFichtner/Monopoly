<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="msg_label" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="test.monopoly_controller">
    <children>
      <Label fx:id="message" />
        <StackPane prefHeight="150.0" prefWidth="200.0">
            <children>
                <ImageView fx:id="board" fitHeight="800.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../resources/board.jpg" />
                    </image>
                </ImageView>
                <ImageView fx:id="token_hat" fitHeight="55.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true" translateX="320.0" translateY="315.0">
                    <image>
                        <Image url="@../resources/token_hat.jpg" />
                    </image>
                </ImageView>
            <ImageView fx:id="token_boot" fitHeight="55.0" fitWidth="38.0" layoutX="391.0" layoutY="396.0" pickOnBounds="true" preserveRatio="true" translateX="320.0" translateY="315.0">
               <image>
                  <Image url="@../resources/token_boot.jpg" />
               </image>
            </ImageView>
            <ImageView fx:id="token_dog" fitHeight="55.0" fitWidth="38.0" layoutX="391.0" layoutY="385.0" pickOnBounds="true" preserveRatio="true" translateX="320.0" translateY="315.0">
               <image>
                  <Image url="@../resources/token_dog.jpg" />
               </image>
            </ImageView>
            <ImageView fx:id="token_ship" fitHeight="55.0" fitWidth="38.0" layoutX="391.0" layoutY="396.0" pickOnBounds="true" preserveRatio="true" translateX="320.0" translateY="315.0">
               <image>
                  <Image url="@../resources/token_ship.jpg" />
               </image>
            </ImageView>
            </children>
        </StackPane>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <Button fx:id="roll_button" mnemonicParsing="false" prefHeight="60.0" prefWidth="100.0" text="Roll" />
            <Button fx:id="sell_button" mnemonicParsing="false" prefHeight="60.0" prefWidth="100.0" text="Sell Property">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="house_button" mnemonicParsing="false" prefHeight="60.0" prefWidth="100.0" text="Buy House">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="hotel_button" mnemonicParsing="false" prefHeight="60.0" prefWidth="100.0" text="Buy Hotel">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="mort_button" mnemonicParsing="false" prefHeight="60.0" prefWidth="100.0" text="Mortgage">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="end_button" mnemonicParsing="false" prefHeight="60.0" prefWidth="100.0" text="End Turn">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
    </children>
</VBox>
