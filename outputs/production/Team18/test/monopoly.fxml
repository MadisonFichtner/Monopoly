<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="test.monopoly_controller">
    <children>
        <StackPane prefHeight="150.0" prefWidth="200.0">
            <children>
                <ImageView fx:id="board" fitHeight="800.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../resources/board.jpg"/>
                    </image>
                </ImageView>
                <ImageView fx:id="test_token" fitHeight="55.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true"
                           translateX="320.0" translateY="315.0">
                    <image>
                        <Image url="@../resources/token_hat.jpg"/>
                    </image>
                </ImageView>
            </children>
        </StackPane>
        <HBox>
            <children>
                <ImageView fx:id="dice_a" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../resources/dice_1.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="dice_b" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../resources/dice_1.png"/>
                    </image>
                </ImageView>
                <Button fx:id="roll_button" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                        mnemonicParsing="false" prefWidth="112.0" text="Roll Dice"/>
            </children>
        </HBox>
    </children>
</VBox>
